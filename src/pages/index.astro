---
import Layout from "../layouts/Layout.astro";
import Mail from "../icons/Mail.astro";
import Work from "../icons/Work.astro";
import Location from "../icons/Location.astro";
import H1 from "../icons/H1.astro";
import H1_ from "../icons/H1_.astro";
import P from "../icons/P.astro";
import P_ from "../icons/P_.astro";
import FrontEnd from "../icons/Front-End.astro";
import BackEnd from "../icons/Back-End.astro";
import App from "../icons/App.astro";
import HTML from "../icons/HTML.astro";
import CSS from "../icons/CSS.astro";
import JS from "../icons/JS.astro";
import REACT from "../icons/REACT.astro";
import Code from "../icons/Code.astro";
import Line from "../icons/Line.astro";
import Line2 from "../icons/Line2.astro";
import Send from "../icons/Send.astro";
import Badge from "../components/Badge.astro";
import InfoPill from "../components/InfoPill.astro";
import ButtonCV from "../components/ButtonCV.astro";
import Tech from "../components/Tech.astro";
---

<style>
  .highlight {
    color: #12f7d6;
  }

  #textarea {
    resize: none;
  }
</style>

<Layout title="Eduardo Valencia - Portfolio">
  <div class="container mx-auto px-4 flex flex-col flex-wrap">
    <main
      id="home"
      class="min-h-screen py-24 mx-4 lg:mx-24 xl:mx-20 2xl:mx-8 max-w-[1280px] place-content-center"
    >
      <div class="flex flex-wrap justify-between mt-4 md:mt-8 xl:mt-24">
        <div
          class="info_banner relative h-fit rounded-tl-[100px] rounded-br-[100px] p-4 min-w-60 justify-center items-center border-white border-[3px] mb-10 mx-auto xl:mx-0"
        >
          <div
            class="absolute top-[-6px] left-[-6px] inset-0 border-t-[4px] border-l-[4px] border-[#12F7D6] rounded-tl-[101px] z-0 pointer-events-none"
          >
          </div>
          <img
            src="/img/profile.webp"
            alt="Foto de perfil"
            class="mx-auto size-24 rounded-full mt-5 mb-2 border-[#12F7D6] border-[3px]"
          />
          <p class="text-center text-2xl">
            Eduardo
            <p class="text-xs text-center">Front-End Developer</p>
          </p>

          <div class="mt-6">
            <InfoPill href="mailto:EduardoVG@proton.me">
              <Mail class="size-4 mr-3 text-[#12F7D6]" />
              EduardoVG@proton.me
            </InfoPill>

            <InfoPill 
              href="https://maps.app.goo.gl/vxS4jv44NZ1355Df6"
            >
              <Location class="size-4 mr-3 text-[#12F7D6]" />
              MÃ©xico
            </InfoPill>

            <InfoPill href="https://www.linkedin.com/">
              <Work class="size-4 mr-3 text-[#12F7D6]" />
              Available for Work
            </InfoPill>

            <div class="flex">
              <Badge> HTML </Badge>
              <Badge> CSS </Badge>
              <Badge> JS </Badge>
              <Badge> REACT </Badge>
            </div>
          </div>

          <ButtonCV />
        </div>

        <div class="main-text relative max-w-[500px] font-thin mt-4 mx-5  mx-auto md:mx-20 lg:mx-12 xl:mx-10 mb-12 mx-auto">
          <H1 class="absolute left-[-15px] top-[-10px]" />
          <p class="text-4xl font-ubuntu leading-tight text-pretty">
            Hey <br /> I'm <span class="highlight">Eduardo</span>, Front-End
            Developer
          </p>
          <H1_ class="absolute right-0 mb-16" />

          <div class="mt-10 relative">
            <P class="mb-4 absolute left-[-15px]" />
            <p class="py-4 text-pretty">
              I help business grow by crafting amazing web experiences. If
              you're looking for a developer that likes to get stuff done.
              <P_ class="mt-4 absolute left-[-15px]" />
            </p>
          </div>
          <p
            class="flex text-2xl items-center text-[#12F7D6] font-bold mt-8 pb-6"
          >
            Lets Talk!

            <a
              href="mailto:EduardoVG@proton.me"
              class="bg-[#43454D] rounded-full ml-3 transition-all ease-in duration-[200ms] hover:bg-[#12F7D6]"
              aria-label="Email"
            >
              <Mail
                class="size-9 p-[8px] text-[#12F7D6] transition-all ease-in duration-[200ms] hover:text-[#43454D]"
                alt="Email"
              />
            </a>
          </p>
        </div>
        <div
          class="info_tech grid grid-cols-1 h-fit py-10 w-44 bg-[#1A1E23] rounded-[60px] gap-y-10 my-0 mb-0 mx-auto  self-center lg:mx-0 "
        >
          <Tech number="4" text="Programming Languages" />
          <Tech number="6" text="Developed Projects" />
          <Tech number="1" text="Year of Experience" />
        </div>
      </div>
    </main>
  </div>

  <section
    id="about"
    class="bg-cover bg-center min-h-screen bg-[#1A1E23]"
    style="background-image: url('/img/about-bg.svg');"
  >
    <div
      class="container mx-auto px-4 flex justify-around h-full items-end flex-wrap max-w-[1280px] place-content-center "
    >
      <div id="info" class="flex flex-col relative bottom-0 lg:mx-20 xl:mx-0">
        <h2
          class="bg-[#292f36] h-16 w-fit text-4xl border-2 rounded-tl-[20px] rounded-br-[20px] border-[#12F7D6] px-4 flex items-center my-9 md:mt-20 md:mb-16"
        >
          About Me
        </h2>

        <div
          class="bg-[#292f36] rounded-[20px] max-w-[600px] 2xl:max-w-[750px] p-4 mb-16 md:mr-4 lg:mr-0 "
        >
          <P class="my-2" />
          <p class="highlight text-2xl mb-3">Hello!</p>
          <p class="text-sm">
            My name is Eduardo and i specialize in Web Development that utilizes <span
              class="highlight">HTML</span
            >, <span class="highlight">CSS</span>, <span class="highlight"
              >JS</span
            > and <span class="highlight">REACT</span>. Currently learning <span
              class="highlight">ASTRO</span
            > and <span class="highlight">TAILWINDCSS</span>.

            <br />
            <br />
            I am highly motivated individual with a passion for learning and growing
            in the tech industry. Always looking for new challenges and opportunities
            to grow my skills. Striving to never stop learning and improving.

            <br />
            <br />
            When I'm not coding, you can find me at the GYM, maintaining a healthy
            lifestyle. I believe that physical fitness is just as important as mental
            fitness. Taking care of my body allows me to stay focused and energized
            when I'm coding, and it's a great way to balance out the sedentary nature
            of my work.
          </p>
          <P_ class="my-2 mt-3" />
        </div>
      </div>
      <img
        src="/img/about.webp"
        alt="About Me"
        class="aspect-[320/400] max-w-[280px] pb-20 my-6"
        loading="lazy"
      />
    </div>
  </section>

  <section
    id="skills"
    class="bg-cover bg-center min-h-screen grid place-items-center text-center relative px-4"
    style="background-image: url(/img/skills-bg.jpg);"
  >
    <Code class="size-16 mt-4 md:mt-2 md:size-20 lg:size-24" />

    <div class="mb-4">
      <h3 class="text-6xl text-[#12F7D6]">Skills</h3>
      <Line class="mx-auto mb-3 mt-1" />
      <p>I am striving to never stop learning and improving ;)</p>
    </div>
    <div
      class="grid gap-10 place-items-center grid-cols-1 sm:grid-cols-2 lg:grid-cols-3"
    >
      <div
        class="flex flex-col items-center bg-[#98FAEC] text-black p-4 text-xs rounded-xl w-[200px]"
      >
        <FrontEnd />
        <p class="text-base">Front-End</p>
        <p>HTML CSS JS REACT</p>
      </div>

      <div
        class="flex flex-col items-center bg-[#98FAEC] text-black p-4 text-xs rounded-xl w-[200px]"
      >
        <App />
        <p class="text-base">App Developement</p>
        <p>Coming Soon!</p>
      </div>

      <div
        class="flex flex-col items-center bg-[#98FAEC] text-black p-4 text-xs rounded-xl w-[200px]"
      >
        <BackEnd />
        <p class="text-base">Back-End</p>
        <p>Coming Soon!</p>
      </div>
    </div>

    <div class="grid gap-x-20 gap-y-8 my-10 grid-cols-2 md:grid-cols-4 md:mt-0">
      <HTML class="h-auto w-24" />
      <CSS class="h-auto w-24" />
      <JS class="h-auto w-24" />
      <REACT class="h-auto w-24" />
    </div>
  </section>

  <section
    id="projects"
    class="bg-cover bg-center min-h-screen grid place-items-center text-center relative"
    style="background-image: url(/img/projects-bg.png);"
  >
    <div class="mx-4">
      <h3 class="text-6xl text-[#12F7D6]">Projects</h3>
      <Line2 class="mx-auto mb-3 mt-1" />
      <p>I had the pleasure of working with these awesome projects</p>
    </div>
  </section>

  <section
    id="contact"
    class="bg-[#292f36] min-h-screen grid place-items-center text-center m-4"
  >
    <div>
      <h4 class="text-6xl text-[#12F7D6] mt-20">Contact</h4>
      <Line2 class="mx-auto mb-3 mt-1" />
      <p>I'm currently available for freelance work</p>
    </div>
    <h5
      class="bg-[#292f36] h-14 w-fit md:text-2xl border-2 rounded-tl-[25px] rounded-br-[25px] border-[#12F7D6] px-8 flex items-center my-0 text-[#12F7D6] text-xl"
    >
      Send Me A Message
    </h5>
    <div class="grid grid-cols-2 gap-x-20 max-w-[800px]">
      <div class="">
        <p class="name text-xs text-[#12f7d6] text-start my-2">Your name*</p>
        <input
          type="text"
          required
          placeholder="Enter your name"
          class="bg-[#292f36] text-sm p-2 mb-4 border-b-2 border-[#12F7D6] focus:outline-none focus:ring-0 w-full"
        />
      </div>
      <div>
        <p class="text-xs text-[#12F7D6] text-start my-2">Your email*</p>
        <input
          type="text"
          required
          placeholder="Enter your email"
          class="bg-[#292f36] text-sm p-2 mb-4 border-b-2 border-[#12F7D6] focus:outline-none focus:ring-0 w-full"
        />
      </div>

      <div class="grid-cols-subgrid col-span-2">
        <p class="text-xs text-[#12F7D6] text-start my-2">Your message*</p>
        <textarea
          name=""
          value=""
          required
          id="textarea"
          cols="30"
          rows="1"
          placeholder="Enter your needs"
          class="bg-[#292f36] text-sm p-2 grid-cols-subgrid col-span-2 border-b-2 border-[#12F7D6] focus:outline-none focus:ring-0 w-full"
        ></textarea>
      </div>
      <button
        type="submit"
        class="bg-[#969696] text-[#292f36] rounded-[20px] py-2 px-4 w-fit mx-auto flex items-center justify-center gap-x-2 text-sm my-10 mb-6 grid-cols-subgrid col-span-2 transition-all ease-in duration-[200ms]"
      >
        Send Message
        <Send class="size-4" />
      </button>

      <script>
        document.addEventListener("DOMContentLoaded", function () {
          const button = document.querySelector('button[type="submit"]');
          const inputs = document.querySelectorAll(
            "input[required], textarea[required]"
          );

          function checkInputs() {
            const allFilled = Array.from(inputs).every(
              (input) =>
                (
                  input as HTMLInputElement | HTMLTextAreaElement
                ).value.trim() !== ""
            );
            if (allFilled) {
              if (button) {
                button.classList.add("bg-[#12F7D6]", "cursor-pointer");
                button.classList.remove("bg-[#969696]", "cursor-default");
              }
            } else {
              if (button) {
                button.classList.add("bg-[#969696]", "cursor-default");
                button.classList.remove("bg-[#12F7D6]", "cursor-pointer");
              }
            }
          }

          inputs.forEach((input) => {
            input.addEventListener("input", checkInputs);
          });

          checkInputs(); // Initial check in case inputs are pre-filled
        });
      </script>
    </div>
  </section>
</Layout>
