---
interface Props {
  href: string;
  label: string;
}

const {href,label} = Astro.props
---
<a
  href={href}
  class="flex px-3 items-center text-xs transition-transform duration-200 ease-in-out hover:scale-110 hover:text-[#12F7D6] bg-transparent outline-none focus:outline-none active:bg-transparent active:text-current"
  rel="noopener noreferrer"
  target="_blank"
  aria-label={label}
>
  <slot />
</a>
