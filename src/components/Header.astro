---
import GitHubIcon from "../icons/GitHub.astro";
import InstagramIcon from "../icons/Instagram.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import CodeIcon from "../icons/Code.astro";
import SocialPill from "./SocialPill.astro";
import Separator from "./Separator.astro";
---

<header class="absolute w-[100%] h-[7%]">
  <div class="flex relative justify-center mx-16 h-[100%] md:justify-between">
    <div class="flex px-12 items-center">
      <CodeIcon class="mx-2 size-7"/>
      <p>Eduardo Valencia</p>
    </div>
    <nav class="hidden md:flex items-center mx-16">
      <SocialPill href="https://www.instagram.com/eduardovg_" label="Instagram">
        <InstagramIcon class="size-3 mx-2" />
        Instagram
      </SocialPill>

      <SocialPill href="https://github.com/Obskurath/" label="GitHub">
        <GitHubIcon class="size-3 mx-2" />
        GitHub
      </SocialPill>

      <SocialPill href="https://www.linkedin.com/" label="LinkedIn">
        <LinkedInIcon class="size-3 mx-2" />
        LinkedIn
      </SocialPill>
    </nav>
  </div>
  <Separator width="90%" />
</header>
