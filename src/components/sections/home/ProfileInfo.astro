---
interface Props {
  name: string;
  role: string;
  imageUrl: string;
}
const { name, role, imageUrl } = Astro.props;
---
<div class="text-center">
    <img 
    src={imageUrl} 
    alt="Foto de Perfil"
    class="mx-auto size-24 rounded-full my-2 border-[#12F7D6] border-[3px]"
    >
  <p class="text-2xl">{name}</p>
  <p class="text-xs">{role}</p>
</div>